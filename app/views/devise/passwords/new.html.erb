<div class="banner signup-banner">
  <h1><%= t("banners.forgot_password") %></h1>
</div>

<div class="wrapper-skinny devise-container">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.label :email, t("user.registration.email") %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "border-animation", placeholder: t("user.registration.email_label") %>
	  </div>

	  <div class="actions">
	    <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions"), :class => "button button-highlight" %><br/>
	    <%= render "devise/shared/links" %>
	  </div>
	<% end %>

</div>
